{{- $patharray := split (path.Dir .Path) "/" -}}
{{- $context := . -}}
{{- $project := (index $patharray 1) -}}
{{- $projectcontext := cond (eq (len (split (path.Dir $context.Path) "/")) 1) "" (replace (path.Dir $context.Path) "audits/" "") -}}
{{- $.Scratch.Delete "score" -}}

{{- with .GetPage (printf "audits/%s/_index.md" $projectcontext) -}}{{- $.Scratch.Set "title" .Title -}}{{- end -}}
{{- with (index (partialCached "render/lastfile.html" (dict "context" . "project" $projectcontext "type" "lighthouse") $projectcontext "lighthouse") "auditfile-all-path") -}}
  {{- range $key, $path := . -}}
      {{- $.Scratch.SetInMap "scoreperformance" (string $key) (partialCached "render/performance" (dict "context" $context "project" $projectcontext "auditfile" .) $projectcontext .) -}}
  {{- end -}}
{{- end -}}
{{- (dict
  "name" ($.Scratch.Get "title")
  "slug" $projectcontext
  "scores" ($.Scratch.Get "scoreperformance")
) | jsonify -}}
