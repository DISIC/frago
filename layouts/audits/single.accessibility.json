{{- $patharray      := split (path.Dir .Path) "/" -}}
{{- $context        := . -}}
{{- $project        := (index $patharray 1) -}}
{{- $projectcontext := cond (eq (len (split $context.Path "/")) 1) "" (replace (path.Dir $context.Path) "audits/" "") -}}
{{- $.Scratch.Delete "score" -}}

{{- with .GetPage (printf "audits/%s/_index.md" $projectcontext) -}}{{- $.Scratch.Set "title" .Title -}}{{- end -}}
{{- $context.Scratch.Set "context" (partialCached "render/context.html" (dict "context" . "project" $projectcontext) $projectcontext) -}}
{{- with (index (partialCached "render/lastfile.html" (dict "context" . "project" $project "type" "accessibility") $projectcontext "accessibility") "auditfile-all-path") -}}
  {{- range $key, $path := . -}}
  {{- $file := (partialCached "render/accessibility" (dict "context" . "project" $projectcontext "auditfile" .) .) -}}
  {{- $.Scratch.SetInMap "score" (string $key) (dict "score" $file.scores "context" (index ($context.Scratch.Get "context") (index $file "date"))) -}}
  {{- end -}}
{{- end -}}
{{- (dict
  "name" ($.Scratch.Get "title")
  "slug" $projectcontext
  "rgaa" ($.Scratch.Get "score")
) | jsonify -}}
